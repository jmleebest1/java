		int actionChoice=0;
		
		 while(true) {
	         System.out.println(menuMsg);
	         answer = sc.nextInt();
	         if(answer == 2) {break;}
	      
	         Beggar beggar = beggar1[answer - 1];

	         	switch(actionChoice) {
	         	case 1://구걸하기
	         	if(beggar.beg()) {
	         		System.out.println(beggar.name+"이(가)" + "구걸을 합니다");
	         	}
	         		
	         	}
	         	
		
		
		
	}

