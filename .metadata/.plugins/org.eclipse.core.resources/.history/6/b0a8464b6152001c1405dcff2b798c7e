package day05;

class Car{
	// 전역변수 -> 밑에 어디서든 사용 가능하다.
	String brand;  
	String color;	
	int price;		

	Car(/*매개 변수*/String brand, String color, int price){
		brand = brand; //매개변수 -> 값         // 저장되는 영역이 달라서 전역변수와 이름이 같아도 선언가능
		color = color;
		price = price;
		
	}
	
	void engineStart()	{
		//지역 변수
		System.out.println(brand+"시동 켜기");
	}
	void engineStop()	{
		System.out.println("시동 끄기");
	}
	
}







public class Road {
	public static void main(String[] args) {
		Car momCar = new Car();
		Car dadyCar = new Car();
		Car myCar = new Car();
		
//		System.out.println(momCar);
//		System.out.println(dadyCar);
//		System.out.println(myCar);
		
		
	}
}
